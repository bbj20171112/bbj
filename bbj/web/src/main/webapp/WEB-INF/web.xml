<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<!-- start 配置编码 by 陆瑞华 2017-11-13 00:07 -->
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>com.bbj.web.filter.EncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- end 配置编码 by 陆瑞华 2017-11-13 00:07 -->

	<!-- start 配置spring mvc by 陆瑞华 2017-11-12 22:15 -->
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<!-- end 配置spring mvc by 陆瑞华 2017-11-12 22:15 -->

	<!-- start 配置不拦截静态文件 by 陆瑞华 2017-11-12 22:15 -->
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/resources/*</url-pattern>
	</servlet-mapping>
	<!-- end 配置不拦截静态文件 by 陆瑞华 2017-11-12 22:15 -->

</web-app>
